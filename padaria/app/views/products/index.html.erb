<%= link_to 'Bem-vindo', statics_welcome_path %>
<%= link_to 'Novo Produto', new_product_path %>

<table>
    <% @products.each do |product| %>
        <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= link_to 'Ver', product_path(product) %></td>
            <td><%= link_to 'Editar', edit_product_path(product) %></td>
            <td><%= link_to 'Apagar', product_path(product), method: :delete %></td>
        </tr>
    <% end %>
</table>